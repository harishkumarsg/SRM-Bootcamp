Day2
Program 5
Recursion Topic - Print distinct binary numbers without consecutive one's
class Solution {

    public void generate(int n) {
        char[] result = new char[n];
        solve(0, n, '0', result);
    }

    private void solve(int index, int n, char prev, char[] result) {
        if (index == n) {
            System.out.println(new String(result));
            return;
        }

        // Option 1: place '0' (always allowed)
        result[index] = '0';
        solve(index + 1, n, '0', result);

        // Option 2: place '1' (only if previous is not '1')
        if (prev != '1') {
            result[index] = '1';
            solve(index + 1, n, '1', result);
        }
    }

    public static void main(String[] args) {
        new Solution().generate(3);
    }
}
